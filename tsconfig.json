{
  "compilerOptions": {
    "outDir": "./lib/",
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "es6",
      "dom"
    ],
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "*": [
        "typings/*"
      ]
    }
  },
  "include": [
    "./src/**/*"
  ]
}
