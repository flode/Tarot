{
  "name": "Tarot",
  "description": "Jouer Tarot sur ligne",
  "dependencies": {
    "classnames": "~2.2.5",
    "compression": "^1.7.1",
    "connect": "^3.6.5",
    "emoji": "^0.3.2",
    "es6-shim": "~0.35.3",
    "react": "~16.2.0",
    "react-addons-shallow-compare": "^15.6.2",
    "react-document-title": "~2.0.3",
    "react-dom": "~16.2.0",
    "send": "^0.16.1",
    "systemd-socket": "0.0.0",
    "uuid": "^3.1.0",
    "websocket": "^1.0.25"
  },
  "devDependencies": {
    "@types/compression": "0.0.35",
    "@types/connect": "^3.4.31",
    "@types/node": "^8.5.2",
    "@types/react": "^16.0.31",
    "@types/react-document-title": "^2.0.1",
    "@types/react-dom": "^16.0.3",
    "@types/send": "^0.14.4",
    "@types/uuid": "^3.4.3",
    "@types/websocket": "0.0.35",
    "babel-cli": "~6.26.0",
    "babel-plugin-transform-react-constant-elements": "~6.23.0",
    "babel-plugin-transform-react-inline-elements": "~6.22.0",
    "babel-preset-es2015": "~6.24.1",
    "babel-preset-react": "~6.24.1",
    "babel-preset-stage-0": "~6.24.1",
    "babelify": "~8.0.0",
    "browserify": "~14.5.0",
    "envify": "~4.1.0",
    "eslint": "~4.14.0",
    "eslint-plugin-react": "~7.5.1",
    "fsmonitor": "~0.2.4",
    "less": "~2.7.3",
    "less-plugin-autoprefix": "~1.5.1",
    "less-plugin-clean-css": "~1.5",
    "less-plugin-npm-import": "~2.1.0",
    "normalize.css": "~7.0.0",
    "tsify": "^3.0.4",
    "tslint": "^5.8.0",
    "typescript": "^2.6.2",
    "uglify-js": "~3.3.2",
    "vinyl-source-stream": "~2.0.0",
    "watchify": "~3.9.0"
  },
  "scripts": {
    "start": "npm run watch-js",
    "watch-js": "watchify -p [ tsify ] -o build-debug/main.js -v -d src/app/main.tsx",
    "build": "npm run build-js",
    "build-js": "NODE_ENV=production browserify src/app/main.tsx -p [ tsify ] -t [ babelify ] -t [envify] | uglifyjs -cm > build/main.js",
    "updatepackages": "npm-check-updates -u -a",
    "buildServer": "tsc --project .",
    "startServer": "node lib/server/main.js",
    "buildStartServer": "npm run buildServer && npm run startServer",
    "startProductionServer": "NODE_ENV=production npm run startServer",
    "lint": "tslint --project . --force",
    "lint-fix": "tslint --project . --fix --force"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015",
            "stage-0",
            "react"
          ]
        }
      ],
      "envify"
    ]
  }
}
