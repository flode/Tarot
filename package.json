{
  "name": "Tarot",
  "description": "Jouer Tarot sur ligne",
  "dependencies": {
    "classnames": "~2.2.5",
    "compression": "~1.7.2",
    "connect": "~3.6.6",
    "emoji": "~0.3.2",
    "es6-shim": "~0.35.3",
    "react": "~16.3.0",
    "react-addons-shallow-compare": "~15.6.2",
    "react-document-title": "~2.0.3",
    "react-dom": "~16.3.0",
    "send": "~0.16.2",
    "systemd-socket": "~0.0.0",
    "uuid": "~3.2.1",
    "websocket": "~1.0.25"
  },
  "devDependencies": {
    "@types/compression": "0.0.36",
    "@types/connect": "~3.4.31",
    "@types/node": "~9.6.1",
    "@types/react": "~16.1.0",
    "@types/react-document-title": "~2.0.2",
    "@types/react-dom": "~16.0.4",
    "@types/send": "~0.14.4",
    "@types/uuid": "~3.4.3",
    "@types/websocket": "0.0.38",
    "babel-cli": "~6.26.0",
    "babel-plugin-transform-react-constant-elements": "~6.23.0",
    "babel-plugin-transform-react-inline-elements": "~6.22.0",
    "babel-preset-es2015": "~6.24.1",
    "babel-preset-react": "~6.24.1",
    "babel-preset-stage-0": "~6.24.1",
    "babelify": "~8.0.0",
    "browserify": "~16.1.1",
    "envify": "~4.1.0",
    "eslint": "~4.19.1",
    "eslint-plugin-react": "~7.7.0",
    "fsmonitor": "~0.2.4",
    "less": "~3.0.1",
    "less-plugin-autoprefix": "~1.5.1",
    "less-plugin-clean-css": "~1.5",
    "less-plugin-npm-import": "~2.1.0",
    "normalize.css": "~8.0.0",
    "npm-check-updates": "~2.14.1",
    "tsify": "~3.0.4",
    "tslint": "~5.9.1",
    "typescript": "~2.8.1",
    "uglify-js": "~3.3.17",
    "vinyl-source-stream": "~2.0.0",
    "watchify": "~3.11.0"
  },
  "scripts": {
    "start": "npm run watch-js",
    "watch-js": "watchify -p [ tsify ] -o build-debug/main.js -v -d src/app/main.tsx",
    "build": "npm run build-js",
    "build-js": "NODE_ENV=production browserify src/app/main.tsx -p [ tsify ] -t [ babelify ] -t [envify] | uglifyjs -cm > build/main.js",
    "updatepackages": "ncu -u -a",
    "buildServer": "tsc --project .",
    "startServer": "node lib/server/main.js",
    "buildStartServer": "npm run buildServer && npm run startServer",
    "startProductionServer": "NODE_ENV=production npm run startServer",
    "lint": "tslint --project . --force",
    "lint-fix": "tslint --project . --fix --force"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015",
            "stage-0",
            "react"
          ]
        }
      ],
      "envify"
    ]
  }
}
